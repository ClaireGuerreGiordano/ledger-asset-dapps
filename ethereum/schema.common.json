{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "properties": {
        "chainId": {
            "type": "integer"
        },
        "contracts": {
            "items": {
                "properties": {
                    "address": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "selectors": {
                        "additionalProperties": false,
                        "patternProperties": {
                            "^0x[a-z0-9]*$": {
                                "properties": {
                                    "arguments": {
                                        "items": {
                                            "properties": {
                                                "defaultLabel": {
                                                    "type": "string"
                                                },
                                                "typePath": {
                                                    "type": "string"
                                                },
                                                "valueFormat": {
                                                    "type": "string"
                                                },
                                                "valuePath": {
                                                    "properties": {
                                                        "erc20": {
                                                            "type": "string"
                                                        },
                                                        "ethereum": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "required": [
                                            "defaultLabel",
                                            "valueFormat",
                                            "valuePath"
                                        ],
                                        "type": "array"
                                    },
                                    "defaultLabel": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "options": {
                                        "properties": {
                                            "assertEthAmountIsZero": {
                                                "type": "boolean"
                                            },
                                            "ethContractAddress": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "assertEthAmountIsZero"
                                        ],
                                        "type": "object"
                                    },
                                    "type": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "defaultLabel",
                                    "options",
                                    "arguments"
                                ],
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                },
                "required": [
                    "name",
                    "address",
                    "selectors"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "name": {
            "type": "string"
        }
    },
    "required": [
        "name",
        "chainId",
        "contracts"
    ],
    "type": "object"
}